<h2> Lista de Funcionarios </h2>
<hr>

{{#each funcionario}}
  <div class="card mt-4">
      <div class="card-body">
        <h3>{{nome}}</h3>
        <small>{{cargo}}</small></br>
        <small>Data de Criação {{date}}</small></br>
        <a href="/admin/funcionario/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Funcionario</button></a>
        <form action="/admin/funcionario/deletar " method="POST">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger mt-2">Deletar funcionario</button></form>

      </div>
  </div>

{{else}}
<h4 class="mt-3">Nenhum funcionario cadastrado!</h4>
{{/each}}
