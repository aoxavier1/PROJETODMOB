{{/each}}
<h3>Editar Funcionario</h3>
<div class="card">
  <div class="card-body">
<form action="/admin/funcionario/edit" method="POST">
<input type="hidden" name="id" value="{{funcionario._id}}">
  <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="Nome do funcionario" class="form-control" value="{{funcionario.nome}}">
  <label for="cargo">Cargo do funcionario: </label>
    <input type="text" id="cargo" name="cargo" placeholder="Cargo do funcionario" class="form-control" value="{{funcionario.cargo}}">
    <button class="btn btn-success mt-4">Editar funcionario</button>
    <br>
</form>
</div>
